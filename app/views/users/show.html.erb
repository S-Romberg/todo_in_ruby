<p id="notice"><%= notice %></p>
<div class="userShow">
  <div class="single profileTag">
    <div>
      <%= image_tag @user.profile_picture.attached? ? @user.profile_picture : 'image.png', class: "image"%>
    </div>
    <div>
      <strong><%= @user.username %></strong>
    </div>
    <div>
      <%= @user.email %>
    </div>
    <div class="profileTagLinks">
      <%= link_to 'Edit', edit_user_path(@user) %> 
      <%= link_to 'Back', users_path %> 
      <a href="/tasks/new">New Task</a>
    </div>
  </div>
  

  <div>
    <% @user.tasks.each do |task| %>
      <div class="single">
        <h4>Task: </h4>
        <%= task.task %> </br>
        <h4>Type: </h4>
        <%= task.type_of_task %>  </br>
        <h4>Status: </h4>
        <%= task.completed ? "Completed" : "Not Completed" %>
        <h4>Description: </h4>
        <%= task.description %>  
        <nav>
          <%= link_to 'Edit', href="/tasks/#{task.id}/edit" %>
          <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </nav>
      </div>
    <% end %>
    
  </div>
</div>


